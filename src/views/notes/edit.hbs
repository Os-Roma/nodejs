<div class="container">
	<h1>Edit Note</h1>

  

  <form class="col-4 mx-auto" action="/edit-note/{{note._id}}?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <h1 class="h3 mb-3 fw-normal">Edit this note</h1>

    <div class="form-floating mb-3">
      <input name="title" type="text" class="form-control" id="title" placeholder="Insert the title" autofocus value="{{note.title}}">
      <label for="title">Title</label>
    </div>
    <div class="form-floating mb-3">
      <textarea rows="40" name="description" id="description" class="form-control" placeholder="Insert the description">{{note.description}}</textarea>
      <label for="description" >Description</label>
    </div>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Save edition</button>
    <p class="mt-5 mb-3 text-muted">&copy; 2017â€“2021</p>
  </form>

</div>
