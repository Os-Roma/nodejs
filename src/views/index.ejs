<%- include('partials/_header')  -%>

<div class="container">
	<div class="row">
		<div class="col-md-5">
			<div class="card p-3">
			<form action="/add" method="POST">
				<div class="form-group mb-3">
					<input type="text" name="title" class="form-control" placeholder="Inserta un título...">
				</div>
				<div class="form-group mb-3">
					<textarea name="description" cols="80" class="form-control" placeholder="Inserta una descripción..."></textarea>
				</div>
				<button htype="submit" class="btn btn-primary w-100 fw-bold">Guardar</button>
			</form>
			</div>
				
		</div>
		<div class="col-md-7">
			<table class="table table-bordered table-hover">
				<thead>
					<tr>
						<th>Nº</th>
						<th>Título</th>
						<th>Descripción</th>
						<th>Operaciones</th>
					</tr>
				</thead>
				<tbody>
					<% for(var i = 0; i < tasks.length; i++ ) { %>
					<tr>
						<td><%= i + 1 %></td>
						<td><%= tasks[i].title %></td>
						<td><%= tasks[i].description %></td>
						<td>
							<a href="/completado/<%= tasks[i]._id %>" class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark' %>">Hecho</a>
							<a href="/edit/<%= tasks[i]._id %>" class="btn btn-success">Editar</a>
							<a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger">Eliminar</a>
						</td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<p>

</p>

<%- include('partials/_footer')  -%>